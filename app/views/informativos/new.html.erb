    <%= render 'form', informativo: @informativo %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </body>

  <%= voltar %>

  <footer class="footer">
    <small>
      <center>
        All rights reserved by @fabiosoaresv | Credits to @aguiroz @diogofelix @marcosaabarbosa
      </center>
    </small>
  </footer>
